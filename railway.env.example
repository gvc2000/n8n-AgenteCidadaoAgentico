# Variáveis de Ambiente Obrigatórias para n8n no Railway

# Configurações Básicas
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=sua_senha_segura_aqui

# Configuração de Host/Webhook (IMPORTANTE para os webhooks funcionarem)
# Substitua pela URL que o Railway gerar para você (ex: https://n8n-production.up.railway.app)
WEBHOOK_URL=https://seu-app-n8n.up.railway.app

# Segurança e Execução
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336 # 14 dias
DB_SQLITE_VACUUM_ON_STARTUP=true

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo
